<ul class="list-group d-none" data-events="list">
    {% for event in events %}
        <li class="list-group-item d-flex justify-content-between align-items-start" style="background:linear-gradient(rgba(255,255,255,0.5), rgba(255,255,255,0.5)), url('/uploads/{{ event.association.logoFilename }}') right no-repeat;background-size:contain;">
            <div class="ms-2 me-auto">
                <div class="fw-bold">
                    <a href="{{ path('event_show', {id: event.id}) }}">{{ event.title }}</a>
                    <br>
                    <small>{{ format_date(event.startAt, event.endAt) }}</small> par <a href="{{ path('association_show', {slug: event.association.slug}) }}">{{ event.association.name }}</a>
                </div>
                <p class="mb-0">{{ event.shortDescription|striptags|raw }}</p>
            </div>

            {% if is_granted('ASSOCIATION_EDIT', event.association) %}
                <a href="{{ path('event_edit', {id: event.id}) }}" class="btn btn-primary" title="{{ 'association.show.actions.edit'|trans }}">
                    <i class="fa fa-edit"></i>
                </a>
            {% endif %}
        </li>
    {% endfor %}
</ul>
