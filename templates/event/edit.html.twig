{% extends 'base.html.twig' %}

{% block title %}{{ 'event.edit.title'|trans({'%title%': event.title}) }}{% endblock %}

{% block body %}
    <h1>{{ 'event.edit.title'|trans({'%title%': event.title}) }}</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.shortDescription, {'attr': {'class': 'form-control wysiwyg'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.longDescription, {'attr': {'class': 'form-control wysiwyg'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.startAt, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.endAt, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button class="btn btn-success text-white">
            <i class="fa fa-save"></i>&nbsp;{{ 'event.edit.form.submit'|trans }}
        </button>
    {{ form_end(form) }}

    <hr>
    <a href="{{ path('association_show', { slug: event.association.slug }) }}" class="btn btn-secondary">
        <i class="fa fa-arrow-left"></i>&nbsp;{{ 'event.edit.form.back'|trans }}
    </a>
{% endblock %}
