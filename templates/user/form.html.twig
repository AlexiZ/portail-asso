{{ form_start(form) }}
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                {{ form_row(form.firstname, {'label_attr': {'class': 'my-2'}, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                {{ form_row(form.lastname, {'label_attr': {'class': 'my-2'}, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                {{ form_row(form.plainPassword.first, {'label_attr': {'class': 'my-2'}, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-sm-12 col-md-6">
            <div class="mb-3">
                {{ form_row(form.plainPassword.second, {'label_attr': {'class': 'my-2'}, 'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>

    <div class="mb-3">
        <button class="btn btn-success text-white"><i class="fa fa-save"></i>&nbsp;{{ 'user_account.edit.submit'|trans }}</button>
    </div>
{{ form_end(form) }}
