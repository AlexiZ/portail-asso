{% extends 'base.html.twig' %}

{% block title %}Modération{% endblock %}

{% block body %}
    <h1>Modération des contributions</h1>

    {% if revisions is not empty %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Association</th>
                <th>Créateur</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for revision in revisions %}
                <tr>
                    <td>{{ revision.association.name }}</td>
                    <td>{{ revision.createdBy|default('Anonyme') }}</td>
                    <td>{{ revision.createdAt|date('d/m/Y H:i') }}</td>
                    <td>
                        {% if not revision.approved %}
                            <a href="{{ path('moderator_approve_revision', { id: revision.id }) }}" class="btn btn-sm btn-success text-white">
                                <i class="fa fa-check"></i> Approuver
                            </a>
                        {% else %}
                            <span class="text-info">Approuvée</span>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">Aucune contribution en attente.</div>
    {% endif %}
{% endblock %}
