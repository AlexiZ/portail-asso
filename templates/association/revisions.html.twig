{% extends 'base.html.twig' %}

{% block title %}Révisions — {{ association.name }}{% endblock %}

{% block body %}
    <h1>Révisions de {{ association.name }}</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Date</th>
            <th>Utilisateur</th>
            <th>Contenu (après)</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for rev in association.revisions %}
            <tr>
                <td>{{ rev.createdAt|date('d/m/Y H:i') }}</td>
                <td>{{ rev.createdBy ? rev.createdBy.email : 'Anonyme' }}</td>
                <td>{{ rev.contentAfter|raw|truncate(100, '...') }}</td>
                <td>
                    {% if is_granted('ROLE_MODERATOR') %}
                        <a href="{{ path('association_rollback', { slug: association.slug, revisionId: rev.id }) }}" class="btn btn-sm btn-danger">
                            <i class="fa fa-undo"></i> Rollback
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('association_show', { slug: association.slug }) }}" class="btn btn-secondary mt-3">
        <i class="fa fa-arrow-left"></i> Retour à la page
    </a>
{% endblock %}
