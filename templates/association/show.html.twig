{% extends 'base.html.twig' %}

{% block title %}{{ association.name }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>{{ association.name }}</h1>

        <div class="d-flex">
            {% if association.revisions|default|length > 0 %}
                <div class="dropdown ms-2">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Versions antérieures
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                        {% for revision in association.revisions %}
                            <li>
                                <a class="dropdown-item revision-preview" href="javascript:void(0);" data-href="{{ path('association_rollback_preview', {slug: association.slug, revisionId: revision.id}) }}">
                                    Créée le {{ revision.createdAt|date('Y-m-d \\à H:i:s') }}{% if revision.createdBy|default %} par {{ revision.createdBy }}{% endif %}{% if loop.index == loop.last %} (actuelle){% endif %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <a href="{{ path('association_edit', { slug: association.slug }) }}" class="btn btn-primary ms-2">
                <i class="fa fa-edit"></i>&nbsp;{{ 'association.show.actions.edit'|trans }}
            </a>
            {% if is_granted('ASSOCIATION_EDIT', association) %}
                <a href="{{ path('event_new', { slug: association.slug }) }}" class="btn btn-secondary ms-2">
                    <i class="fa fa-calendar-plus"></i>&nbsp;{{ 'association.show.actions.new_event'|trans }}
                </a>
            {% endif %}
        </div>
    </div>

    <div class="mb-3">
        {% for category in association.categories %}
            <span class="badge bg-{{ category.badge }}">{{ ('association.category.' ~ category.value)|trans }}</span>
        {% endfor %}
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    {% if association.logoFilename|default %}
                        <img src="/uploads/{{ association.logoFilename }}" alt="{{ association.name }}" class="img-fluid img-thumbnail">
                    {% endif %}
                </div>

                <div class="col-md-9 d-flex">
                    <div>
                        <h3>Nous contacter</h3>

                        {% if association.hasAnyContactDetail|default %}
                            <ul class="list-unstyled">
                                {% if association.contactName|default or association.contactFunction|default %}
                                    <li>
                                        {% if association.contactName|default %}{{ association.contactName }}{% endif %}
                                        {% if association.contactFunction|default %} - {{ association.contactFunction }}{% endif %}
                                    </li>
                                {% endif %}
                                {% if association.contactAddress|default %}
                                    <li>{{ association.contactAddress }}</li>
                                {% endif %}
                                {% if association.contactEmail|default %}
                                    <li>{{ association.contactEmail }}</li>
                                {% endif %}
                                {% if association.contactPhone|default %}
                                    <li>{{ association.contactPhone }}</li>
                                {% endif %}
                            </ul>
                        {% endif %}
                    </div>

                    <div class="mx-3">
                        <h3>Nos réseaux</h3>

                        {% if association.hasAnyNetwork|default %}
                            <ul class="list-unstyled">
                                {% if association.networkWebsite|default %}
                                    <li><a href="{{ association.networkWebsite }}">{{ association.networkWebsite }}</a></li>
                                {% endif %}
                                {% if association.networkFacebook|default %}
                                    <li><a href="{{ association.networkFacebook }}">{{ association.networkFacebook }}</a></li>
                                {% endif %}
                                {% if association.networkInstagram|default %}
                                    <li><a href="{{ association.networkInstagram }}">{{ association.networkInstagram }}</a></li>
                                {% endif %}
                                {% if association.networkOther|default %}
                                    <li><a href="{{ association.networkOther }}">{{ association.networkOther }}</a></li>
                                {% endif %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if association.content|default %}
        <div class="card mb-4">
            <div class="card-body">
                {{ association.content|raw }}
            </div>
        </div>
    {% endif %}

    <h2 class="h4 mt-4">{{ 'association.show.events.title'|trans }}</h2>
    {% if association.events|default|length > 0 %}
        <ul class="list-group">
            {% for event in association.events %}
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <strong>{{ event.title }}</strong><br>
                        <small>
                            {{ format_date(event.startAt, event.endAt) }}
                        </small>
                        <p class="mb-0">{{ event.shortDescription|raw }}</p>
                    </div>
                    <div>
                        {% if is_granted('ASSOCIATION_EDIT', event.association) %}
                            <a href="{{ path('event_edit', {id: event.id}) }}" class="btn btn-primary">
                                <i class="fa fa-edit"></i>&nbsp;{{ 'association.show.actions.edit'|trans }}
                            </a>
                        {% endif %}
                        <a href="{{ path('event_show', {id: event.id}) }}" class="btn btn-info" title="{{ 'association.show.actions.show'|trans }}">
                            <i class="fa fa-eye"></i>
                        </a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="text-muted">{{ 'association.show.events.no_events'|trans }}</p>
    {% endif %}

    <p class="mt-3 text-center fst-italic">
        Page créée {{ format_date(association.createdAt)|lower }} par {{ association.createdBy }} - dernière mise à jour {{ format_date(association.updatedAt)|lower }} par {{ association.updatedBy }}
    </p>
{% endblock %}
