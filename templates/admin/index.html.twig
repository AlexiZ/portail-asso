{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
    <h1>Administration</h1>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|default|join(', ') }}</td>
                    <td>
                        <a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-sm btn-primary">
                            Modifier
                        </a>
                        <a href="{{ path('admin_toggle_role', { id: user.id }) }}" class="btn btn-sm btn-warning">
                            {% if 'ROLE_MODERATOR' in user.roles %}Retirer modérateur{% else %}Attribuer modérateur{% endif %}
                        </a>
                        <a href="{{ path('homepage', { '_switch_user': user.email }) }}" class="btn btn-sm btn-info">
                            Se connecter en tant que
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}" class="btn btn-primary mb-3">
        <i class="fa fa-user-plus"></i> Ajouter un utilisateur
    </a>
{% endblock %}
